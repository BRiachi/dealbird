generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── AUTH ───
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── USER ───
model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  handle        String?    @unique
  // Profile / Link-in-Bio
  bio           String?
  avatar        String? // URL to custom avatar if different from Auth provider
  theme         String   @default("simple") // simple, dark, colorful, etc.
  accentColor   String   @default("#000000")
  font          String   @default("Inter") // Google Font name
  buttonStyle   String   @default("rounded") // rounded | sharp | outline | pill
  backgroundType  String @default("theme")   // theme | gradient | image
  backgroundValue String?                    // gradient: "#hex1,#hex2,direction" | image: URL
  layout        String   @default("grid-2")  // list | grid-2 | grid-3
  socialLinks   Json?    // { instagram?, twitter?, tiktok?, youtube?, linkedin?, website? }
  pixels        Json?    // { meta?: string, tiktok?: string, google?: string, snapchat?: string, pinterest?: string }
  profileViews  Int      @default(0)

  products  Product[]
  orders    Order[]

  // Subscription
  plan             String   @default("free") // free, pro, agency
  stripeCustomerId String?  @unique
  stripeSubId      String?  @unique
  stripePriceId    String?
  stripeCurrentPeriodEnd DateTime?

  // Payouts
  stripeConnectId      String?   @unique
  stripeConnectEnabled Boolean   @default(false)
  paypalEmail          String?   // PayPal payout email

  // Limits
  proposalsThisMonth Int @default(0)
  proposalsResetAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  Account[]
  sessions  Session[]
  proposals Proposal[]
  invoices  Invoice[]
  
  // LMS Progress
  lessonProgress UserLessonProgress[]

  // Affiliate (Lifetime)
  referredById String?
  referredBy   User?   @relation("UserReferrals", fields: [referredById], references: [id])
  referrals    User[]  @relation("UserReferrals")
}

enum ProductType {
  URL
  DIGITAL
  COACHING
  COLLECT_EMAIL
  COURSE
  MEMBERSHIP
}

model Product {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      ProductType
  
  title     String
  subtitle  String?
  slug      String      @unique // for standalone product pages or just unique tracking
  
  // Storefront appearance
  image       String?     // thumbnail
  buttonText  String?     // e.g. "Download Now"
  
  // Pricing
  price       Int         @default(0) // cents
  currency    String      @default("usd")
  
  // JSON Data (Flexible)
  // Digital: { fileUrl: "", fileName: "" }
  // Coaching: { duration: 30, availability: {...} }
  // URL: { url: "" }
  settings    Json? 
  
  // Stats
  views       Int         @default(0)
  sales       Int         @default(0)
  revenue     Int         @default(0)
  clicks      Int         @default(0)
  
  order       Int         @default(0)
  archived    Boolean     @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]
  
  // Relations
  course    Course?
  appointmentProfile AppointmentProfile?
}

model AppointmentProfile {
  id        String   @id @default(cuid())
  productId String   @unique
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  duration  Int      // minutes (e.g., 30, 60)
  location  String   // "google_meet", "zoom", "phone"
  
  // Availability Rules (JSON for flexibility)
  // e.g. { mon: ["09:00-17:00"], tue: [] }
  availability Json
  
  bookings  Booking[]
}

model Booking {
  id         String   @id @default(cuid())
  profileId  String
  profile    AppointmentProfile @relation(fields: [profileId], references: [id])
  
  orderId    String   @unique
  order      Order    @relation(fields: [orderId], references: [id])
  
  startTime  DateTime
  endTime    DateTime
  
  status     String   @default("CONFIRMED") // PENDING, CONFIRMED, CANCELLED, COMPLETED
  meetingUrl String?
  
  createdAt  DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  userId    String   // Seller (User) ID
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  buyerEmail String
  buyerName  String?
  amount     Int
  status     String   // PENDING, PAID
  stripeSessionId String   @unique
  affiliateUserId String?  // ID of the user who referred this sale
  createdAt  DateTime @default(now())
  
  booking    Booking?
}

// ─── PROPOSALS ───
model Proposal {
  id        String   @id @default(cuid())
  slug      String   @unique // short shareable ID
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title      String
  brand      String
  brandEmail String
  terms      String   @default("Net 30")
  notes      String?  @db.Text

  status    ProposalStatus @default(DRAFT)
  sentAt    DateTime?
  signedAt  DateTime?
  signature String?        // signer name
  signatureData String?    @db.Text // base64 signature image

  expiresAt DateTime?

  items     ProposalItem[]
  addOns    ProposalAddOn[]
  invoice   Invoice?

  // Analytics (Pro feature)
  views     ProposalView[]
  viewCount Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProposalStatus {
  DRAFT
  SENT
  VIEWED
  SIGNED
  EXPIRED
}

model ProposalItem {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  name   String
  detail String?
  price  Int      // stored in cents

  order  Int @default(0)

  createdAt DateTime @default(now())
}

model ProposalAddOn {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  name        String
  description String?
  price       Int      // stored in cents

  isSelected  Boolean  @default(false) // Brand selects this before signing
  order       Int      @default(0)

  createdAt DateTime @default(now())
}

model ProposalView {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  ip        String?
  userAgent String?
  referrer  String?
  duration  Int?     // seconds spent on page

  viewedAt DateTime @default(now())
}

// ─── INVOICES ───
model Invoice {
  id        String   @id @default(cuid())
  slug      String   @unique
  number    String   // e.g., DF-2026-0001
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  proposalId String? @unique
  proposal   Proposal? @relation(fields: [proposalId], references: [id])

  brand      String
  brandEmail String

  status    InvoiceStatus @default(PENDING)
  total     Int           // cents
  dueDate   DateTime
  paidAt    DateTime?
  deliverables Json? // Array of { name: string, url: string, size: number, key: string }

  items InvoiceItem[]

  // Reminders
  lastReminderAt DateTime?
  reminderCount  Int @default(0)

  issuedAt  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

model InvoiceItem {
  id        String  @id @default(cuid())
  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  name  String
  price Int    // cents

  order Int @default(0)
}

// ─── COURSES (LMS) ───
model Course {
  id        String   @id @default(cuid())
  productId String   @unique // Link to the Product entries (pricing, sales)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  modules   CourseModule[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CourseModule {
  id       String   @id @default(cuid())
  courseId String
  course   Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  title    String
  order    Int      @default(0)
  
  lessons  CourseLesson[]
}

model CourseLesson {
  id       String       @id @default(cuid())
  moduleId String
  module   CourseModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  title    String
  order    Int      @default(0)
  
  // Content
  videoType     String   @default("UPLOADTHING") // or YOUTUBE, VIMEO
  videoUrl      String?
  body          String?  @db.Text // Rich text content
  resources     Json?    // Array of { name, url } attachments
  
  isFreePreview Boolean  @default(false)

  // Progress tracking
  progress      UserLessonProgress[]
}

model UserLessonProgress {
  id        String       @id @default(cuid())
  userId    String       // The student (buyer)
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessonId  String
  lesson    CourseLesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  
  completed Boolean      @default(false)
  updatedAt DateTime     @updatedAt

  @@unique([userId, lessonId])
}

// ─── EMAIL LOG ───
model EmailLog {
  id        String   @id @default(cuid())
  userId    String
  to        String
  subject   String
  type      String   // PROPOSAL_SENT, INVOICE_SENT, REMINDER, DEAL_SIGNED, PAYMENT_CONFIRMATION
  status    String   @default("SENT") // SENT, FAILED
  resendId  String?  // Resend email ID for tracking
  error     String?  @db.Text

  // Optional references
  proposalId String?
  invoiceId  String?

  sentAt    DateTime @default(now())
}
