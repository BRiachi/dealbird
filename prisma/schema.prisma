generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── AUTH ───
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── USER ───
model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  handle        String?
  bio           String?

  // Subscription
  plan             String   @default("free") // free, pro, agency
  stripeCustomerId String?  @unique
  stripeSubId      String?  @unique
  stripePriceId    String?
  stripeCurrentPeriodEnd DateTime?

  // Limits
  proposalsThisMonth Int @default(0)
  proposalsResetAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  Account[]
  sessions  Session[]
  proposals Proposal[]
  invoices  Invoice[]
}

// ─── PROPOSALS ───
model Proposal {
  id        String   @id @default(cuid())
  slug      String   @unique // short shareable ID
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title      String
  brand      String
  brandEmail String
  terms      String   @default("Net 30")
  notes      String?  @db.Text

  status    ProposalStatus @default(DRAFT)
  sentAt    DateTime?
  signedAt  DateTime?
  signature String?        // signer name
  signatureData String?    @db.Text // base64 signature image

  items ProposalItem[]
  invoice Invoice?

  // Analytics (Pro feature)
  views     ProposalView[]
  viewCount Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProposalStatus {
  DRAFT
  SENT
  VIEWED
  SIGNED
  EXPIRED
}

model ProposalItem {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  name   String
  detail String?
  price  Int      // stored in cents

  order  Int @default(0)

  createdAt DateTime @default(now())
}

model ProposalView {
  id         String   @id @default(cuid())
  proposalId String
  proposal   Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  ip        String?
  userAgent String?
  referrer  String?
  duration  Int?     // seconds spent on page

  viewedAt DateTime @default(now())
}

// ─── INVOICES ───
model Invoice {
  id        String   @id @default(cuid())
  slug      String   @unique
  number    String   // e.g., DF-2026-0001
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  proposalId String? @unique
  proposal   Proposal? @relation(fields: [proposalId], references: [id])

  brand      String
  brandEmail String

  status    InvoiceStatus @default(PENDING)
  total     Int           // cents
  dueDate   DateTime
  paidAt    DateTime?

  items InvoiceItem[]

  // Reminders
  lastReminderAt DateTime?
  reminderCount  Int @default(0)

  issuedAt  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

model InvoiceItem {
  id        String  @id @default(cuid())
  invoiceId String
  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  name  String
  price Int    // cents

  order Int @default(0)
}
